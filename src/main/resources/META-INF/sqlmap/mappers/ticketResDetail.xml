<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.helloworld.dao.TicketResDetailDao">
	<resultMap type="TicketResDetail" id="TicketResDetailResult">
		<result property="trdcode" column="trdcode"/>
		<result property="trcode" column="trcode"/>
		<result property="tcode" column="tcode"/>
		<result property="trdcnt" column="trdcnt"/>
		<result property="trddate" column="trddate"/>
		<result property="trdresult" column="trdresult"/>
	</resultMap>

	<!-- 회원: 예약한 티켓 정보 추가 -->
	<insert id="tResDetail" parameterType="TicketResDetail">
		INSERT INTO TICKET_RESDETAIL (TRDCODE, TRCODE, TCODE, TRDCNT, TRDDATE)
		     VALUES (TICKET_RESDETAIL_SEQ.NEXTVAL
		           , #{trcode}
		           , #{tcode}
		           , #{trdcnt}
		           , #{trddate})
	</insert>
	
	<!-- 주문 내역 상세보기 -->
	<select id="tResGetContent" parameterType="int" resultType="TicketResDetail">
		SELECT * FROM TICKET_RESDETAIL
        		WHERE TRCODE = #{trcode}
	</select>
	
	<!-- 회원: 주문 취소 -->
	<update id="tResCancel" parameterType="int">
		UPDATE TICKET_RES 
		   SET TRRESULT = 1
		 WHERE TRCODE = #{trcode}
	</update>
	
</mapper>		